    "lucide-react": "^0.563.0",
    "npm-run-all": "^4.1.5",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-router": "^7.13.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18"
